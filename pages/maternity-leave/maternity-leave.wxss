page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #8b1538;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 30rpx;
  padding-bottom: 60rpx;
}

.form-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.field-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item:last-of-type {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
  min-width: 200rpx;
  max-width: 400rpx;
  margin-right: 20rpx;
}

.picker {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #666;
}

.input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #333;
}

.form-item-switch {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item-switch:last-child {
  border-bottom: none;
}

.form-item-switch .label {
  flex: 1;
  max-width: none;
  font-size: 28rpx;
  color: #333;
}

.form-item-switch switch {
  transform: scale(0.8);
}

/* Radio group styles */
radio-group {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.radio-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.radio-item:last-child {
  border-bottom: none;
}

.radio-label {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
  margin-left: -30rpx;
  margin-right: -30rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  border: none;
  padding: 0;
  margin: 0;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.btn-secondary {
  background: #fff;
  color: #666;
  border: 2rpx solid #e0e0e0 !important;
}

.btn::after {
  border: none;
}

.result-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.result-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 40rpx;
  color: #fff;
}

.result-main {
  text-align: center;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 30rpx;
}

.result-label {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 15rpx;
}

.result-value {
  display: block;
  font-size: 60rpx;
  font-weight: bold;
}

.result-detail {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 30rpx;
}

.detail-item {
  text-align: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  padding: 20rpx 10rpx;
}

.detail-label {
  display: block;
  font-size: 22rpx;
  opacity: 0.8;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.detail-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
}

.result-date {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 30rpx;
}

.date-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  padding: 15rpx 20rpx;
}

.date-label {
  font-size: 26rpx;
  opacity: 0.8;
}

.date-value {
  font-size: 28rpx;
  font-weight: bold;
}

.result-info {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  font-size: 26rpx;
}

.info-label {
  opacity: 0.8;
}

.info-value {
  font-weight: bold;
}

.result-timeline {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 25rpx;
}

.timeline-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.timeline-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.timeline-item {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 8rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.timeline-type {
  font-size: 28rpx;
  font-weight: bold;
}

.timeline-days {
  font-size: 24rpx;
  opacity: 0.9;
}

.timeline-date {
  font-size: 22rpx;
  opacity: 0.8;
}
