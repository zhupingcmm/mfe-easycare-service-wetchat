page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #8b1538;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 30rpx;
}

.form-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.form-item {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  min-height: 80rpx;
}

.field-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.form-item:last-of-type {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
  margin-right: 20rpx;
  white-space: normal;
  word-wrap: break-word;
  line-height: 1.5;
  max-width: 400rpx;
}

.input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #333;
}

.tips {
  display: flex;
  align-items: center;
  background: #fff9e6;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.tips-text {
  flex: 1;
  font-size: 24rpx;
  color: #ff9800;
  line-height: 1.5;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: #fff;
}

.btn-secondary {
  background: #fff;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.result-section {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-card {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 16rpx;
  padding: 40rpx;
  color: #fff;
  margin-bottom: 20rpx;
}

.result-main {
  text-align: center;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 30rpx;
}

.result-label {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 15rpx;
}

.result-value {
  display: block;
  font-size: 64rpx;
  font-weight: bold;
}

.result-breakdown {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 30rpx;
}

.breakdown-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 25rpx;
}

.breakdown-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.breakdown-content {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.breakdown-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.breakdown-value {
  font-size: 32rpx;
  font-weight: bold;
}

.result-details {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 25rpx;
}

.details-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.details-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.details-item {
  font-size: 24rpx;
  opacity: 0.9;
  line-height: 1.6;
}

.notice {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  border-left: 4rpx solid #f5576c;
}

.notice-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}
