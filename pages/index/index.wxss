/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #8b1538;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 30rpx;
  padding-bottom: 60rpx;
  justify-content: flex-start;
}

/* Tab buttons - 左右布局 */
.tab-buttons {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 10rpx;
  width: 100%;
}

.tab-button {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-button.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.tab-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.tab-button.active .tab-icon {
  transform: scale(1.1);
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
}

.tab-button.active .tab-text {
  color: #fff;
  font-weight: bold;
}

/* Content area */
.content-area {
  animation: fadeIn 0.3s ease-in;
  margin-top: 0;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Form styles */
.form-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  margin-top: 0;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.form-item {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  min-height: 80rpx;
}

.field-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
  min-width: 200rpx;
  max-width: 400rpx;
  margin-right: 20rpx;
  white-space: normal;
  word-wrap: break-word;
  line-height: 1.5;
}

.required {
  color: #ff4d4f;
  margin-right: 4rpx;
  font-weight: bold;
}

.picker {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #666;
}

.input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #333;
}

.form-item-switch {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item-switch:last-child {
  border-bottom: none;
}

.form-item-switch .label {
  flex: 1;
  max-width: none;
}

.form-item-switch switch {
  transform: scale(0.8);
}

/* Radio group styles */
radio-group {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.radio-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.radio-item:last-child {
  border-bottom: none;
}

.radio-label {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #333;
}

/* Button group */
.button-group {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  padding: 0;
}

.btn {
  flex: 1;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  padding: 24rpx 0;
}

.btn::after {
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.btn-secondary {
  background: #fff;
  color: #667eea;
  border: 2rpx solid #667eea;
}

/* Result section */
.result-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.result-card {
  background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
  border-radius: 12rpx;
  padding: 30rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.1);
}

.result-item:last-child {
  border-bottom: none;
}

.result-label {
  font-size: 28rpx;
  color: #666;
}

.result-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

.result-value.highlight {
  font-size: 40rpx;
  color: #764ba2;
}
